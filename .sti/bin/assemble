#!/bin/bash

set -e

echo "---> Installing application source..."
cp -Rf /tmp/src/. ./

echo "---> Set date.timezone"
echo "date.timezone = Europe/Paris" >> /opt/rh/php55/root/etc/php.ini

if [ -f composer.json ]; then
  echo "Found 'composer.json', installing dependencies using composer.phar... "

  # Install Composer
  php -r "readfile('https://getcomposer.org/installer');" | php

  # Install App dependencies using Composer
  export SYMFONY_ENV=prod
  ./composer.phar install --no-interaction --optimize-autoloader --no-ansi --prefer-dist --no-dev --verbose

  if [ ! -f composer.lock ]; then
    echo -e "\nConsider adding a 'composer.lock' file into your source repository.\n"
  fi
fi

echo "---> Run app/check.php"
php app/check.php

# Fix source directory permissions
fix-permissions ./


echo "---> Fix root"
sed -i 's%^DocumentRoot "/opt/app-root/src"%DocumentRoot "/opt/app-root/src/web"%g' /opt/rh/httpd24/root/etc/httpd/conf/httpd.conf
sed -i 's%^<Directory "/opt/app-root/src"%<Directory "/opt/app-root/src/web"%g' /opt/rh/httpd24/root/etc/httpd/conf/httpd.conf
